{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$application/*": ["src/application/*"],
      "$config/*": ["src/config/*"],
      "$domain/*": ["src/domain/*"],
      "$infrastructure/*": ["src/infrastructur/*"],
      "$presentation/*": ["src/presentation/*"],
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"]
}