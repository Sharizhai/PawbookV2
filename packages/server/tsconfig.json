{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$api/*": ["src/api/*"],
      "$config/*": ["src/config/*"],
      "$db/*": ["src/db/*"],
      "$middlewares/*": ["src/middlewares/*"],
      "$routes/*": ["src/routes/*"],
      "$types/*": ["src/types/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts"]
}